// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// -- Models added for Mentora --

model User {
  id        Int             @id @default(autoincrement())
  email     String          @unique
  password  String
  createdAt DateTime        @default(now())
  profile   StudentProfile?
}

model StudentProfile {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int      @unique
  gradeLevel  Int
  gpaRange    String
  interests   String
  strengths   String
  weaknesses  String
  timePerWeek Int
}

model RoadmapBlock {
  id          Int      @id @default(autoincrement())
  title       String
  type        String
  minGrade    Int
  maxGrade    Int
  effortLevel Int
  description String
}

